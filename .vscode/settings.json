{
  // explorer
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },

  // spelling
  "cSpell.language": "en-GB",
  "cSpell.words": [
    "changelogen",
    "nuxi",
    "Nuxt",
    "poupe"
  ],

  // ESLint
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  }
}
