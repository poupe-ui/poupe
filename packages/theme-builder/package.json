{
  "name": "@poupe/theme-builder",
  "version": "0.2.1",
  "type": "module",
  "description": "",
  "author": "Alejandro Mery <amery@apptly.co>",
  "license": "MIT",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/poupe-ui/poupe",
    "directory": "packages/theme-builder"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "import": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.cjs"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.mjs",
      "require": "./dist/tailwind.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "run-s lint type-check test build publint",
    "dev:prepare": "unbuild --stub",
    "type-check": "tsc --noEmit",
    "lint": "env DEBUG=eslint:eslint eslint --fix .",
    "publint": "pnpx publint",
    "build": "unbuild",
    "test": "vitest run",
    "dev": "vitest watch",
    "clean": "rm -rf dist node_modules"
  },
  "peerDependencies": {
    "@material/material-color-utilities": "^0.3.0",
    "tailwindcss": "^3.4.15"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0",
    "tailwindcss": "^3.4.15",
    "type-fest": "^4.29.0"
  },
  "devDependencies": {
    "@poupe/eslint-config": "link:../eslint-config",
    "typescript": "~5.5.4",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">= 18",
    "pnpm": ">= 8"
  }
}
